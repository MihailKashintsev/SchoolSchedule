<Window x:Class="Kiosk.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод пароля"
        Height="784"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Введите пароль администратора"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <StackPanel Grid.Row="1">
            <PasswordBox x:Name="PasswordBox"
                         PasswordChar="•"
                         FontSize="16"
                         MinHeight="45"
                         Margin="0,0,0,15" />
            <TextBlock x:Name="ErrorText"
                       Foreground="Red"
                       FontSize="14"
                       Visibility="Collapsed" />
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="1" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
                <Button Content="2" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
                <Button Content="3" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="4" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
                <Button Content="5" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
                <Button Content="6" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="7" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" />
                <Button Content="8" Width="100" Height="100" Click="NumberButton_Click" Margin="3" FontSize="18" RenderTransformOrigin="0.5,1" />
                <Button Content="9" Width="100" Height="100" Click="NumberButton_Click" FontSize="18" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center"/>
            <Button Content="0" Click="NumberButton_Click" FontSize="18" RenderTransformOrigin="-0.13,1.836" Margin="133,106,129,-100" Grid.Row="2" />
            <Button Content="⌫" Click="BackspaceButton_Click" Margin="236,106,24,-100" FontSize="16" RenderTransformOrigin="1.993,1.791" Grid.Row="2" />
            <Button Content="Отмена"
                    Click="CancelButton_Click"
                    FontSize="16" Background="#FFFF4600" Margin="28,106,232,-100" Grid.Row="2" />
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="ОК"
                    Width="100"
                    Height="45"
                    Click="OkButton_Click"
                    IsDefault="True"
                    FontSize="16" />
        </StackPanel>
    </Grid>
</Window>