<Window x:Class="Kiosk.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О проекте" 
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c5f9e" Padding="20">
            <Button x:Name="BackButton" 
                        Content="Назад" 
                        Background="#2c5f9e"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        MinWidth="140"
                        Padding="20,10"
                        Click="BackButton_Click" Margin="0,0,-10,0" Height="43" VerticalAlignment="Center" HorizontalAlignment="Right" Width="140"/>
        </Border>

        <!-- Main Content - УЛУЧШЕННАЯ ПРОКРУТКА -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly"
                      Padding="0,0,5,0">
            <StackPanel Margin="30" HorizontalAlignment="Center">

                <!-- Project Icon -->
                <Viewbox Width="100" Height="100" Margin="0,0,0,25" HorizontalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Path Fill="#2c5f9e" Data="M12,3L1,9L12,15L21,10.09V17H23V9M5,13.18V17.18C5,17.18 8,16 12,16C16,16 19,17.18 19,17.18V13.18C19,13.18 16,14.5 12,14.5C8,14.5 5,13.18 5,13.18Z"/>
                    </Canvas>
                </Viewbox>

                <!-- Project Title -->
                <TextBlock Text="Школьный информационный киоск" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="#2c5f9e"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Version -->
                <TextBlock Text="Версия 1.0.0" 
                           FontSize="18"
                           Foreground="#6c757d"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- QR Codes Section -->
                <TextBlock Text="Полезные ссылки" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#2c5f9e"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- QR Code 1 - Сайт команды -->
                    <StackPanel Grid.Column="0" 
                                HorizontalAlignment="Center" 
                                Margin="20">
                        <Border Background="White" 
                                BorderBrush="#dee2e6" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Сайт команды" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,15"/>

                                <!-- QR Code 1 Image -->
                                <Image x:Name="QrCode1Image"
                                       Width="180" 
                                       Height="180"
                                       HorizontalAlignment="Center"
                                       Stretch="Uniform"/>

                                <!-- Увеличиваем область для касания -->
                                <Border Background="Transparent"
                                        Padding="10,5"
                                        MouseLeftButtonDown="QrCodeText_MouseLeftButtonDown"
                                        Cursor="Hand">
                                    <TextBlock x:Name="QrCode1Text"
                                               Text="https://team-website.com" 
                                               FontSize="14"
                                               Foreground="#2c5f9e"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                </Border>
                                <TextBlock Text="(нажмите для копирования)" 
                                           FontSize="12"
                                           Foreground="#6c757d"
                                           HorizontalAlignment="Center"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- QR Code 2 - Сайт школы -->
                    <StackPanel Grid.Column="1" 
                                HorizontalAlignment="Center" 
                                Margin="20">
                        <Border Background="White" 
                                BorderBrush="#dee2e6" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Сайт школы" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,15"/>

                                <!-- QR Code 2 Image -->
                                <Image x:Name="QrCode2Image"
                                       Width="180" 
                                       Height="180"
                                       HorizontalAlignment="Center"
                                       Stretch="Uniform"/>

                                <!-- Увеличиваем область для касания -->
                                <Border Background="Transparent"
                                        Padding="10,5"
                                        MouseLeftButtonDown="QrCodeText_MouseLeftButtonDown"
                                        Cursor="Hand">
                                    <TextBlock x:Name="QrCode2Text"
                                               Text="https://school-website.edu" 
                                               FontSize="14"
                                               Foreground="#2c5f9e"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                </Border>
                                <TextBlock Text="(нажмите для копирования)" 
                                           FontSize="12"
                                           Foreground="#6c757d"
                                           HorizontalAlignment="Center"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Developer Info -->
                <Border Background="#f8f9fa" 
                        CornerRadius="10" 
                        Padding="25"
                        Margin="0,0,0,25"
                        BorderBrush="#dee2e6"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Информация о проекте" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="#2c5f9e"
                                   Margin="0,0,0,20"/>

                        <TextBlock x:Name="DeveloperText"
                                   Text="Здесь будет информация о разработчиках проекта..."
                                   FontSize="16"
                                   Foreground="#495057"
                                   TextWrapping="Wrap"
                                   LineHeight="24"/>

                        <Border Background="#e9ecef" 
                                CornerRadius="5" 
                                Padding="20,12"
                                Margin="0,20,0,0">
                            <TextBlock Text="? Для связи: телеграмм: @RENDERGAMESRU" 
                                       FontSize="15"
                                       Foreground="#6c757d"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Additional Info -->
                <Border Background="#e8f4fd" 
                        CornerRadius="10" 
                        Padding="25"
                        BorderBrush="#b6d7f2"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Техническая информация" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#2c5f9e"
                                   Margin="0,0,0,15"/>

                        <StackPanel>
                            <TextBlock Text="• Платформа: .NET Framework 4.8" 
                                       FontSize="15"
                                       Foreground="#495057"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="• Технология: WPF" 
                                       FontSize="15"
                                       Foreground="#495057"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="• Совместимость: Windows 10/11" 
                                       FontSize="15"
                                       Foreground="#495057"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="• WebView2" 
                                       FontSize="15"
                                       Foreground="#495057"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>