<Window x:Class="Kiosk.Views.RoomInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о кабинете" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">

    <Border Background="White" Padding="20">
        <StackPanel>
            <TextBlock x:Name="RoomNumberText" FontSize="28" FontWeight="Bold" 
                      Foreground="#2c3e50" Margin="0,0,0,10"/>

            <TextBlock x:Name="PurposeText" FontSize="18" FontWeight="SemiBold"
                      Foreground="#34495e" Margin="0,0,0,5"/>

            <Border Background="#ecf0f1" Padding="10" Margin="0,10,0,10">
                <StackPanel>
                    <TextBlock Text="Преподаватель:" FontWeight="Bold"/>
                    <TextBlock x:Name="TeacherText" FontSize="14" Margin="0,2,0,10"/>

                    <TextBlock Text="Текущий урок:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="LessonText" FontSize="14" Margin="0,2,0,10"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Расписание на день:" FontWeight="Bold"/>
            <Border BorderBrush="#bdc3c7" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                <TextBlock x:Name="ScheduleText" FontSize="12" TextWrapping="Wrap"/>
            </Border>

            <TextBlock Text="Дополнительная информация:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock x:Name="AdditionalInfoText" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,15"/>

            <Button Content="Закрыть" Width="100" HorizontalAlignment="Right" 
                    Click="CloseButton_Click" Background="#3498db" Foreground="White"/>
        </StackPanel>
    </Border>
</Window>