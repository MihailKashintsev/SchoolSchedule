<Window x:Class="Kiosk.Views.ReplacementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Замены уроков"
        WindowState="Maximized"
        WindowStyle="None"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Поддержка эмодзи -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Emoji, Segoe UI, sans-serif"/>
        </Style>


        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="14"
                                Background="#1E3A5F" Padding="24,14">
                            <Border.Effect>
                                <DropShadowEffect Color="#000" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5298"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#254780"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1B2A" Offset="0"/>
                <GradientStop Color="#1A2F4A" Offset="0.5"/>
                <GradientStop Color="#0A1628" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Padding="28,16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0D1F35" Offset="0"/>
                    <GradientStop Color="#122840" Offset="0.5"/>
                    <GradientStop Color="#0D1F35" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#000" Opacity="0.5" BlurRadius="20" ShadowDepth="4" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Замены уроков"
                               Foreground="White" FontSize="32" FontWeight="Bold"/>
                    <TextBlock x:Name="DateText" Text="Замены на сегодня"
                               Foreground="#F59E0B" FontSize="18" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Выбор класса -->
                <Border Grid.Column="1" Margin="0,0,16,0" CornerRadius="12"
                        Padding="16,10" BorderThickness="1.5">
                    <Border.Background>
                        <SolidColorBrush Color="#0F2341"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="#1E4DB7"/>
                    </Border.BorderBrush>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Класс:" Foreground="#8AADD4"
                                   FontSize="18" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <ComboBox x:Name="ClassComboBox"
                                  Width="200" MinHeight="46"
                                  FontSize="20" Foreground="Black"
                                  Background="White" BorderThickness="0"
                                  SelectionChanged="ClassComboBox_SelectionChanged"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка назад -->
                <Button Grid.Column="3" Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click">
                    <TextBlock Text="← На главную" Foreground="White"
                               FontSize="18" FontWeight="Bold"/>
                </Button>
            </Grid>
        </Border>

        <!-- Контент замен -->
        <Border Grid.Row="2" Margin="16,12,16,8" CornerRadius="18" BorderThickness="1.5">
            <Border.Background>
                <SolidColorBrush Color="#0F2341"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#1E4DB7"/>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect Color="#000" Opacity="0.3" BlurRadius="16" ShadowDepth="0"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly" Padding="6">
                <StackPanel x:Name="ReplacementsContainer" Margin="16">
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Нет замен -->
        <Border Grid.Row="2" x:Name="NoReplacementsContainer"
                Margin="16,12,16,8" CornerRadius="18" BorderThickness="1.5"
                Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="#0F2341"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#1E4DB7"/>
            </Border.BorderBrush>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="✅" FontSize="64" TextAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock x:Name="NoReplacementsText"
                           Text="На сегодня замен нет"
                           FontSize="26" FontWeight="Bold"
                           Foreground="#10B981" HorizontalAlignment="Center"/>
                <TextBlock Text="Все уроки идут по расписанию"
                           FontSize="18" Foreground="#4A6A8A"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Статусбар -->
        <Border Grid.Row="3" Padding="28,10" Background="#0A1628">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Готово"
                           Foreground="#4A6A8A" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text="© RENDERGAMES • Школьный киоск"
                           Foreground="#2A4A6A" FontSize="13"
                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

    </Grid>
</Window>
