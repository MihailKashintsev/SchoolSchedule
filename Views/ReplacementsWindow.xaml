<Window x:Class="Kiosk.Views.ReplacementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Замены уроков" 
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Градиенты -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE78A3C" Offset="0"/>
            <GradientStop Color="#FFD97B2B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFDE7E7" Offset="0"/>
            <GradientStop Color="#FFF5C6C6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ReplacementItemGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFF9F9F9" Offset="0"/>
            <GradientStop Color="#FFF0F0F0" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#6c757d" Offset="0"/>
            <GradientStop Color="#495057" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackButtonHoverGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#495057" Offset="0"/>
            <GradientStop Color="#343a40" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ComboBoxGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="1"/>
        </LinearGradientBrush>

        <!-- Эффекты теней -->
        <DropShadowEffect x:Key="DropShadowEffect" 
                          BlurRadius="15" 
                          ShadowDepth="4" 
                          Color="#40000000"
                          Direction="270"
                          Opacity="0.5"/>

        <DropShadowEffect x:Key="CardShadowEffect" 
                          BlurRadius="8" 
                          ShadowDepth="2" 
                          Color="#20000000"
                          Direction="270"
                          Opacity="0.3"/>

        <DropShadowEffect x:Key="TextShadowEffect" 
                          BlurRadius="2" 
                          ShadowDepth="1" 
                          Color="#20000000"
                          Direction="270"
                          Opacity="0.3"/>

        <!-- Стиль для карточки замены -->
        <Style x:Key="ReplacementCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ReplacementItemGradient}"/>
            <Setter Property="BorderBrush" Value="#FFE78A3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect" Value="{StaticResource CardShadowEffect}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header с градиентом и тенью -->
        <Border Grid.Row="0" 
                Background="{StaticResource HeaderGradient}" 
                Padding="20"
                Effect="{StaticResource DropShadowEffect}">
            <TextBlock Text="Замены уроков" 
                       Foreground="White" 
                       FontSize="32" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Effect="{StaticResource TextShadowEffect}"/>
        </Border>

        <!-- Date and Class Selection с улучшенным дизайном -->
        <Border Grid.Row="1" 
                Background="#f8f9fa" 
                BorderBrush="#dee2e6" 
                BorderThickness="0,1" 
                Padding="15"
                Effect="{StaticResource CardShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Class Selection -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderBrush="#dee2e6" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Класс:" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Foreground="#495057"/>
                        <Border Background="{StaticResource ComboBoxGradient}"
                                CornerRadius="8"
                                BorderBrush="#dee2e6"
                                BorderThickness="1"
                                Padding="2">
                            <ComboBox x:Name="ClassComboBox" 
                                      Width="180" 
                                      FontSize="14" 
                                      MinHeight="40"
                                      Padding="10,5"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      SelectionChanged="ClassComboBox_SelectionChanged" />
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Date Info с градиентом -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="20,0"
                        BorderBrush="#dee2e6" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <Border Background="#FFF9E7D6" 
                                CornerRadius="6" 
                                Padding="15,10">
                            <TextBlock x:Name="DateText" 
                                       Text="Замены на 23.10.2025"
                                       Foreground="#FFE78A3C"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderBrush="#dee2e6" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="BackButton" 
                                Content="← На главную" 
                                Background="{StaticResource BackButtonGradient}"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                MinWidth="140"
                                MinHeight="40"
                                Padding="15,10"
                                Click="BackButton_Click"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter x:Name="contentPresenter"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          RecognizesAccessKey="True"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource BackButtonHoverGradient}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#212529"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Replacements Content с улучшенным фоном -->
        <Border Grid.Row="2" 
                Background="White" 
                Margin="10"
                CornerRadius="12"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                Effect="{StaticResource CardShadowEffect}">
            <ScrollViewer 
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                PanningMode="VerticalOnly"
                Padding="10">
                <StackPanel x:Name="ReplacementsContainer" Margin="10">
                    <!-- Content will be generated in code -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- No Replacements Message с улучшенным дизайном -->
        <Border Grid.Row="2"
                x:Name="NoReplacementsContainer"
                Background="White"
                CornerRadius="12"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                Margin="10"
                Effect="{StaticResource CardShadowEffect}"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                    <Canvas Width="24" Height="24">
                        <Path Fill="#FFE78A3C" Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                    </Canvas>
                </Viewbox>
                <TextBlock x:Name="NoReplacementsText"
                           Text="На сегодня замен нет"
                           FontSize="20"
                           Foreground="#FFE78A3C"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"/>
                <TextBlock Text="Все уроки идут по расписанию"
                           FontSize="14"
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Bar с улучшенным дизайном -->
        <Border Grid.Row="3" 
                Background="#f8f9fa" 
                BorderBrush="#dee2e6" 
                BorderThickness="1,0,0,0"
                Padding="10"
                CornerRadius="0,0,0,0">
            <Grid>
                <TextBlock x:Name="StatusText" 
                           Text="Готово" 
                           FontSize="12" 
                           Foreground="#6c757d"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="F11 - полноэкранный режим • ESC - выход" 
                           FontSize="12" 
                           Foreground="#6c757d"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>