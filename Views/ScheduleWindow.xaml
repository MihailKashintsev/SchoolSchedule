<Window x:Class="Kiosk.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расписание уроков" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c5f9e" Padding="20">
            <TextBlock Text="Расписание уроков" 
                       Foreground="White" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Class Selection -->
        <Border Grid.Row="1" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Класс:" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="ClassComboBox" 
                              Width="150" 
                              FontSize="16" 
                              MinHeight="40"
                              Padding="10,5"
                              SelectionChanged="ClassComboBox_SelectionChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="WeekTypeText" 
                               Text="Текущая неделя" 
                               Foreground="#495057"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="UpdateTimeText" 
                               Text=" • Обновлено: 01.01.2024 10:00"
                               Foreground="#6c757d"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="BackButton" 
                            Content="← На главную" 
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            MinWidth="120"
                            MinHeight="40"
                            Padding="15,10"
                            Click="BackButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Days Selection -->
        <Border Grid.Row="2" Background="White" BorderBrush="#dee2e6" BorderThickness="0,1" Padding="10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled"
                          PanningMode="HorizontalOnly">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="MondayButton" 
                            Content="ПН" 
                            Click="DayButton_Click" 
                            Background="LightGray" 
                            Margin="5" 
                            Padding="20,15"
                            FontSize="16"
                            MinWidth="80"
                            MinHeight="50"/>
                    <Button x:Name="TuesdayButton" 
                            Content="ВТ" 
                            Click="DayButton_Click" 
                            Background="LightGray" 
                            Margin="5" 
                            Padding="20,15"
                            FontSize="16"
                            MinWidth="80"
                            MinHeight="50"/>
                    <Button x:Name="WednesdayButton" 
                            Content="СР" 
                            Click="DayButton_Click" 
                            Background="LightGray" 
                            Margin="5" 
                            Padding="20,15"
                            FontSize="16"
                            MinWidth="80"
                            MinHeight="50"/>
                    <Button x:Name="ThursdayButton" 
                            Content="ЧТ" 
                            Click="DayButton_Click" 
                            Background="LightGray" 
                            Margin="5" 
                            Padding="20,15"
                            FontSize="16"
                            MinWidth="80"
                            MinHeight="50"/>
                    <Button x:Name="FridayButton" 
                            Content="ПТ" 
                            Click="DayButton_Click" 
                            Background="LightGray" 
                            Margin="5" 
                            Padding="20,15"
                            FontSize="16"
                            MinWidth="80"
                            MinHeight="50"/>
                    <Button x:Name="SaturdayButton" 
                            Content="СБ" 
                            Click="DayButton_Click" 
                            Background="LightGray" 
                            Margin="5" 
                            Padding="20,15"
                            FontSize="16"
                            MinWidth="80"
                            MinHeight="50"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Schedule Content -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly"
                      VerticalAlignment="Stretch">
            <StackPanel x:Name="ScheduleContainer" Margin="20">
                <!-- Элементы будут добавляться через код -->
            </StackPanel>
        </ScrollViewer>

        <!-- No Lessons Message -->
        <TextBlock Grid.Row="3"
                   x:Name="NoLessonsText"
                   Text="На выбранный день уроков нет"
                   FontSize="18"
                   Foreground="#95a5a6"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>

        <StatusBar Grid.Row="4" Background="#f8f9fa">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово" FontSize="14" Foreground="#6c757d"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>