<Window x:Class="Kiosk.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расписание уроков" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Градиенты -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2c5f9e" Offset="0"/>
            <GradientStop Color="#3a7bc8" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DayButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#f8f9fa" Offset="0"/>
            <GradientStop Color="#e9ecef" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DayButtonSelectedGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2c5f9e" Offset="0"/>
            <GradientStop Color="#1e4a7e" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DayButtonHoverGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#e9ecef" Offset="0"/>
            <GradientStop Color="#dee2e6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#6c757d" Offset="0"/>
            <GradientStop Color="#495057" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackButtonHoverGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#495057" Offset="0"/>
            <GradientStop Color="#343a40" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ComboBoxGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="1"/>
        </LinearGradientBrush>

        <!-- Эффекты теней -->
        <DropShadowEffect x:Key="DropShadowEffect" 
                  BlurRadius="15" 
                  ShadowDepth="4" 
                  Color="#40000000"
                  Direction="270"
                  Opacity="0.5"/>

        <DropShadowEffect x:Key="CardShadowEffect" 
                  BlurRadius="8" 
                  ShadowDepth="2" 
                  Color="#20000000"
                  Direction="270"
                  Opacity="0.3"/>

        <DropShadowEffect x:Key="TextShadowEffect" 
                  BlurRadius="2" 
                  ShadowDepth="1" 
                  Color="#20000000"
                  Direction="270"
                  Opacity="0.3"/>

        <!-- Стили для кнопок дней недели -->
        <Style x:Key="DayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DayButtonGradient}"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DayButtonHoverGradient}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#adb5bd"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DayButtonSelectedGradient}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SelectedDayButtonStyle" TargetType="Button" BasedOn="{StaticResource DayButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DayButtonSelectedGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2c5f9e"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#2c5f9e" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header с градиентом и тенью -->
        <Border Grid.Row="0" 
                Background="{StaticResource HeaderGradient}" 
                Padding="20"
                Effect="{StaticResource DropShadowEffect}">
            <TextBlock Text="Расписание уроков" 
                       Foreground="White" 
                       FontSize="32" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Effect="{StaticResource TextShadowEffect}"/>
        </Border>

        <!-- Class Selection с улучшенным дизайном -->
        <Border Grid.Row="1" 
                Background="#f8f9fa" 
                BorderBrush="#dee2e6" 
                BorderThickness="0,1" 
                Padding="20"
                Effect="{StaticResource CardShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть: выбор класса -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderBrush="#dee2e6" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Класс:" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Foreground="#495057"/>
                        <Border Background="{StaticResource ComboBoxGradient}"
                                CornerRadius="8"
                                BorderBrush="#dee2e6"
                                BorderThickness="1"
                                Padding="2">
                            <ComboBox x:Name="ClassComboBox" 
                                      Width="180" 
                                      FontSize="16" 
                                      MinHeight="45"
                                      Padding="10,8"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      SelectionChanged="ClassComboBox_SelectionChanged"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Центральная часть: информация -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="20,0"
                        BorderBrush="#dee2e6" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <Border Background="#e8f4fd" 
                                CornerRadius="6" 
                                Padding="10,5"
                                Margin="0,0,10,0">
                            <TextBlock x:Name="WeekTypeText" 
                                       Text="Текущая неделя" 
                                       Foreground="#2c5f9e"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="UpdateTimeText" 
                                   Text=" • Обновлено: 01.01.2024 10:00"
                                   Foreground="#6c757d"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Правая часть: кнопка назад -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderBrush="#dee2e6" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center">
                        <Button x:Name="BackButton" 
                                Content="← На главную" 
                                Background="{StaticResource BackButtonGradient}"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                MinWidth="140"
                                MinHeight="45"
                                Padding="20,10"
                                Click="BackButton_Click"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter x:Name="contentPresenter"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          RecognizesAccessKey="True"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource BackButtonHoverGradient}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#212529"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Days Selection с улучшенными кнопками -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#dee2e6" 
                BorderThickness="0,1" 
                Padding="15"
                Effect="{StaticResource CardShadowEffect}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled"
                          PanningMode="HorizontalOnly">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="MondayButton" 
                            Content="ПН" 
                            Click="DayButton_Click" 
                            Style="{StaticResource DayButtonStyle}"/>
                    <Button x:Name="TuesdayButton" 
                            Content="ВТ" 
                            Click="DayButton_Click" 
                            Style="{StaticResource DayButtonStyle}"/>
                    <Button x:Name="WednesdayButton" 
                            Content="СР" 
                            Click="DayButton_Click" 
                            Style="{StaticResource DayButtonStyle}"/>
                    <Button x:Name="ThursdayButton" 
                            Content="ЧТ" 
                            Click="DayButton_Click" 
                            Style="{StaticResource DayButtonStyle}"/>
                    <Button x:Name="FridayButton" 
                            Content="ПТ" 
                            Click="DayButton_Click" 
                            Style="{StaticResource DayButtonStyle}"/>
                    <Button x:Name="SaturdayButton" 
                            Content="СБ" 
                            Click="DayButton_Click" 
                            Style="{StaticResource DayButtonStyle}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Schedule Content с улучшенным фоном -->
        <Border Grid.Row="3" 
                Background="White" 
                Margin="10"
                CornerRadius="12"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                Effect="{StaticResource CardShadowEffect}">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly"
                          VerticalAlignment="Stretch"
                          Padding="5">
                <StackPanel x:Name="ScheduleContainer" Margin="15">
                    <!-- Элементы будут добавляться через код -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- No Lessons Message с улучшенным дизайном -->
        <Border Grid.Row="3"
                x:Name="NoLessonsContainer"
                Background="White"
                CornerRadius="12"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                Margin="10"
                Effect="{StaticResource CardShadowEffect}"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                    <Canvas Width="24" Height="24">
                        <Path Fill="#adb5bd" Data="M11,15H13V17H11V15M11,7H13V13H11V7M12,2C6.47,2 2,6.5 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20Z"/>
                    </Canvas>
                </Viewbox>
                <TextBlock x:Name="NoLessonsText"
                           Text="На выбранный день уроков нет"
                           FontSize="20"
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Выберите другой день или проверьте расписание позже"
                           FontSize="14"
                           Foreground="#adb5bd"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- StatusBar с улучшенным дизайном -->
        <Border Grid.Row="4" 
                Background="#f8f9fa" 
                BorderBrush="#dee2e6" 
                BorderThickness="1,0,0,0"
                Padding="10"
                CornerRadius="0,0,0,0">
            <Grid>
                <TextBlock x:Name="StatusText" 
                           Text="Готово" 
                           FontSize="14" 
                           Foreground="#6c757d"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Школьный информационный киоск" 
                           FontSize="14" 
                           Foreground="#adb5bd"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>