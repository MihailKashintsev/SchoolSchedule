<Window x:Class="Kiosk.Views.BrowserMapOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BrowserMapOverlay"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        Width="220"
        SizeToContent="Height"
        Left="20" Top="20">

    <Border CornerRadius="20" BorderThickness="1.5" Opacity="0.97">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0F2341" Offset="0"/>
                <GradientStop Color="#0D1B2A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <SolidColorBrush Color="#1E4DB7"/>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect Color="#000" Opacity="0.5" BlurRadius="24" ShadowDepth="0"/>
        </Border.Effect>

        <StackPanel Margin="16,18,16,18">

            <TextBlock Text="Карта здания"
                       FontSize="18" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8">

                <Button x:Name="ZoomOutButton" Content="−"
                        FontSize="22" FontWeight="Bold"
                        Width="52" Height="52" Margin="0,0,6,0"
                        BorderThickness="0" Cursor="Hand"
                        Click="ZoomOutButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="b" CornerRadius="14">
                                <Border.Background><SolidColorBrush Color="#1E4DB7"/></Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="b" Property="Background" Value="#2A5298"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="b" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground><SolidColorBrush Color="White"/></Button.Foreground>
                </Button>

                <Button x:Name="ResetZoomButton" Content="100%"
                        FontSize="15" FontWeight="Bold"
                        Width="68" Height="52" Margin="0,0,6,0"
                        BorderThickness="0" Cursor="Hand"
                        Click="ResetZoomButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="b" CornerRadius="12">
                                <Border.Background><SolidColorBrush Color="#065F46"/></Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="b" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground><SolidColorBrush Color="White"/></Button.Foreground>
                </Button>

                <Button x:Name="ZoomInButton" Content="+"
                        FontSize="22" FontWeight="Bold"
                        Width="52" Height="52"
                        BorderThickness="0" Cursor="Hand"
                        Click="ZoomInButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="b" CornerRadius="14">
                                <Border.Background><SolidColorBrush Color="#1E4DB7"/></Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="b" Property="Background" Value="#2A5298"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="b" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground><SolidColorBrush Color="White"/></Button.Foreground>
                </Button>

            </StackPanel>

            <TextBlock x:Name="ZoomLevelText" Text="100%"
                       HorizontalAlignment="Center"
                       FontSize="15" FontWeight="Bold"
                       Foreground="#8AADD4"
                       Margin="0,0,0,16"/>

            <Button x:Name="BackButton" FontSize="16" FontWeight="Bold"
                    Height="52" BorderThickness="0" Cursor="Hand"
                    Click="BackButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" CornerRadius="14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#B45309" Offset="0"/>
                                    <GradientStop Color="#F59E0B" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.88"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="← НАЗАД" Foreground="White" FontSize="16" FontWeight="Bold"/>
            </Button>

        </StackPanel>
    </Border>
</Window>
