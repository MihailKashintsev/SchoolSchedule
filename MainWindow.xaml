<Window x:Class="Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Школьное расписание" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="316"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть - Основная информация -->
        <Grid Grid.Column="0" Background="#f8f9fa">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Шапка с иконкой настроек -->
            <Border Grid.Row="0" Background="#2c5f9e" Padding="20">
                <Grid>
                    <TextBlock Text="Школьный информационный киоск" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Иконка настроек в правом верхнем углу -->
                    <Button x:Name="SettingsButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="SettingsButton_Click"
                            ToolTip="Настройки">
                        <Image Source="/Images/settings_emoji.png" 
                               Width="24" 
                               Height="24"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
                <!-- Иконка -->
                <Viewbox Width="80" Height="80" Margin="0,0,0,20" HorizontalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Image Source="/Images/AIhelper.png" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    </Canvas>
                </Viewbox>

                <!-- Информация о школе -->
                <Border Background="White" 
                        CornerRadius="15" 
                        Margin="20,10"
                        BorderThickness="1"
                        BorderBrush="#dee2e6">
                    <StackPanel Margin="40,30">
                        <TextBlock Text="Муниципальное бюджетное общеобразовательное учреждение"
                                   Foreground="#495057"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   TextAlignment="Center"
                                   Margin="0,0,0,8"/>

                        <TextBlock
                                   Foreground="#2c5f9e"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,8">
                            <Run Text="Средняя общеобразовательная школа "/>
                            <LineBreak/>
                            <Run Text="«Лига первых»"/>
                        </TextBlock>

                        <TextBlock Text="г. Химки"
                                   Foreground="#6c757d"
                                   FontSize="16"
                                   FontWeight="Normal"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Дата и время -->
                <StackPanel Margin="40,25">
                    <TextBlock x:Name="TimeText" 
                               Text="00:00:00"
                               Foreground="Black"
                               FontSize="36"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock x:Name="DateText" 
                               Text="понедельник, 1 января 2024"
                               Foreground="#FF757575"
                               FontSize="20"
                               FontWeight="Normal"
                               HorizontalAlignment="Center"
                               Opacity="0.9"/>
                </StackPanel>

                <!-- Кнопки навигации - 2 строки по 2 кнопки + одна на всю ширину -->
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Первая строка -->
                    <Button x:Name="ScheduleButton"
                            Grid.Row="0" Grid.Column="0"
                            Background="#2c5f9e"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Margin="10"
                            BorderThickness="0"
                            MinWidth="180"
                            Height="60"
                            Click="ScheduleButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/ring.png" 
                                   Width="24" 
                                   Height="24" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Расписание" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="20,15"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1e4a7a"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#15395c"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ReplacementsButton"
                            Grid.Row="0" Grid.Column="1"
                            Background="#e67e22"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Margin="10"
                            BorderThickness="0"
                            MinWidth="180"
                            Height="60"
                            Click="ReplacementsButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/refresh_emoji.png" 
                                   Width="24" 
                                   Height="24" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Замены" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="20,15"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#d35400"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#ba4a00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Вторая строка -->
                    <Button x:Name="AboutButton"
                            Grid.Row="1" Grid.Column="0"
                            Background="#9b59b6"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Margin="10"
                            BorderThickness="0"
                            MinWidth="180"
                            Height="60"
                            Click="AboutButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/Logo.png" 
                                   Width="24" 
                                   Height="24" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="О проекте" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="20,15"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8e44ad"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#7d3c98"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="MapButton"
                            Grid.Row="1" Grid.Column="1"
                            Background="#27ae60"
                            Foreground="White"
                            FontSize="18"
                            Margin="10"
                            BorderThickness="0"
                            MinWidth="180"
                            Height="60"
                            Click="MapButton_Click"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/map_emoji.png" 
                                   Width="24" 
                                   Height="24" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Карта здания" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="20,15"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#219652"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1c7e45"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Третья строка - кнопка "Новости" на всю ширину -->
                    <Button x:Name="News"
                            Grid.Row="2" 
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Background="#FF0004FF"
                            Foreground="White"
                            FontSize="18"
                            Margin="10"
                            BorderThickness="0"
                            Height="60"
                            Click="NewsButton_Click"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="/Images/newsVK.png" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Новости" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="20,15"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0000CC"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#000099"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Статус бар -->
            <Border Grid.Row="2" 
                    VerticalAlignment="Bottom" 
                    Background="#f8f9fa" 
                    BorderThickness="1,1,0,0"
                    BorderBrush="#dee2e6">
                <TextBlock x:Name="StatusText" 
                           Text="Готов к работе • F11 - полноэкранный режим"
                           Foreground="#6c757d"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="15,10"/>
            </Border>
        </Grid>

        <!-- Правая часть - ИИ помощник (остается без изменений) -->
        <Border Grid.Column="1" Background="#2c3e50" BorderBrush="#34495e" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="36"/>
                </Grid.RowDefinitions>

                <!-- Заголовок помощника -->
                <Border Grid.Row="0" Background="#34495e" Padding="15">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Images/AIhelper.png" 
                               Width="20" 
                               Height="20" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="Школьный помощник" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Выбор класса -->
                <Border Grid.Row="1" Background="#1a252f" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Выберите класс:" 
                                   Foreground="#ecf0f1" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="AIClassComboBox" 
                                  FontSize="14"
                                  Background="White"
                                  SelectionChanged="AIClassComboBox_SelectionChanged"/>
                    </StackPanel>
                </Border>

                <!-- Информация от ИИ -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="15">
                    <StackPanel x:Name="AIContentPanel">
                        <!-- Контент будет добавляться динамически -->
                    </StackPanel>
                </ScrollViewer>

                <!-- Подсказка -->
                <Border Grid.Row="3" Background="#34495e" Padding="10" Grid.RowSpan="2">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Images/question_emoji.png" 
                               Width="16" 
                               Height="16" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Выберите класс сверху для получения информации"
                                   Foreground="#bdc3c7"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>