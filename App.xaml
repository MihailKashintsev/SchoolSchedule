<Application x:Class="Kiosk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- В файле App.xaml в разделе <Application.Resources> -->
        <DropShadowEffect x:Key="DropShadowEffect" 
                  BlurRadius="15" 
                  ShadowDepth="4" 
                  Color="#40000000"
                  Direction="270"
                  Opacity="0.5"/>

        <DropShadowEffect x:Key="CardShadowEffect" 
                  BlurRadius="10" 
                  ShadowDepth="3" 
                  Color="#20000000"
                  Direction="270"
                  Opacity="0.4"/>

        <DropShadowEffect x:Key="TextShadowEffect" 
                  BlurRadius="2" 
                  ShadowDepth="1" 
                  Color="#20000000"
                  Direction="270"
                  Opacity="0.3"/>
    </Application.Resources>
</Application>